.Content
  %h1
    = t('mass_uploads.titles.error_articles')

  .Content-inner
    %ul
      - @error_articles.each do |article|
        %li
          = (link_to article.title, article_path(article), target: "_blank")
          %ul.Import-errors
            - article.images.each do |image|
              - if image.failing_reason
                %li
                  = truncate(image.external_url.reverse).reverse + ":"
                  = image.failing_reason
    = link_to t("articles.export.error_articles"), exports_show_path(kind_of_article: "error_articles", format: "csv"), :class => "Btn Btn--blue"
