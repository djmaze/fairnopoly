<%= t('transaction.notifications.seller.friendly_percent') %>

<%= t('transaction.notifications.seller.fp_intro', ngo: ngo.nickname,
		percent: fp , amount: amount) %>

<%= t('transaction.notifications.seller.fp_donate', ngo: ngo.nickname,
		month: Time.now.strftime("%B") ,amount: amount  ) %>

<%= show_bank_account_or_contact ngo %>

<%= t('transaction.notifications.seller.fp_donate_info') %>

<%= t('transaction.notifications.seller.fp_merci') %>

